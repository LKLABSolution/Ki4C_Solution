    });

    function getParameterByName(name) {
        name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
        var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
            results = regex.exec(location.search);
        return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
    }

    var param1 = getParameterByName('member_id');
    var param2 = getParameterByName('member_mail');
    $(function () {
        $.ajax({
            url: '/auth/findByPassResult.ajax?member_id='+param1 + '&member_mail=' +param2,
            type: "get",
            dataType: "json",
            success: function (data) {
                login_result.innerText = `임시 비밀번호는 ${data.pass} 입니다. 보안을 위해 로그인 후 비밀번호를 변경해 주시기 바랍니다.`;
            }

